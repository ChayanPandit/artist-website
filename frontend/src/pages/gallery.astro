---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/Navigation.astro';
import ArtworkGrid from '../components/ArtworkGrid.astro';
import { getAllArtworks } from '../data/artworks';

const allArtworks = getAllArtworks();
---

<Layout title="Gallery | Artist Portfolio">
  <Navigation />
  
  <main class="pt-24 pb-20">
    <div class="container mx-auto px-4">
      <h1 class="text-5xl font-bold mb-8">Gallery</h1>
      <div class="mb-12">
        <p class="text-xl text-gray-600">
          Explore the complete collection of artworks, spanning various mediums and styles.
        </p>
      </div>
      <ArtworkGrid artworks={allArtworks} columns={3} />
    </div>
  </main>

  <footer class="bg-black text-white py-8">
    <div class="container mx-auto px-4 text-center">
      <p>&copy; {new Date().getFullYear()} Artist Name. All rights reserved.</p>
    </div>
  </footer>
</Layout>