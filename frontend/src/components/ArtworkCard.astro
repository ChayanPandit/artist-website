---
import type { Artwork } from '../data/artworks';

const { title, image } = Astro.props as Artwork;
---

<div class="group relative overflow-hidden rounded">
  <img 
    src={image} 
    alt={title} 
    class="w-full object-cover rounded transform transition-transform duration-500 group-hover:scale-110" 
  />
  <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition">
    <p class="text-white text-center mt-4">{title}</p>
  </div>
</div>
