---
import type { Artwork } from '../data/artworks';

type Props = Artwork;

const { title, image, description, year, category, dimensions, medium } = Astro.props;
---

<div class="group relative overflow-hidden rounded-lg">
  <img 
    src={image} 
    alt={title} 
    class="w-full h-[400px] object-cover transition-transform duration-300 group-hover:scale-105"
  />
  <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
    <div class="text-white text-center p-6">
      <h3 class="text-2xl font-bold mb-2">{title}</h3>
      <p class="text-sm mb-4">{description}</p>
      <div class="text-sm space-y-1 opacity-75">
        <p>{year} â€¢ {category}</p>
        {dimensions && <p>{dimensions}</p>}
        {medium && <p>{medium}</p>}
      </div>
    </div>
  </div>
</div>